/* pages/canvas/canvas.wxss */
page{
    padding-bottom: 50rpx;
}
.list-box{
    width: 100%;
    background-color: #EEFFEE;
    display: flex;
    flex-flow: column;
    justify-content: flex-start;
    align-items: center;
    padding:20rpx 10rpx;
    height: 100%;

}

.tips{
    font-size: 40rpx;
    margin:20rpx;
    
}

.label{
    display: flex;
    flex-flow: row;
    height: 100rpx;
    align-items: center;
}

.labelname{
   margin-left: 20rpx;
}



image {
    width: 100%;

}



.my-btn:active{
   
    display: flex;
    flex-flow: row;
    justify-content: center;
    align-items: center;
    background-color: #dfdada;
    border-radius: 10rpx;
    color: white;
    box-shadow: #cecaca 1rpx 1rpx 1rpx 1rpx;
    
    padding:20rpx 0;

}

.other{  background-color:rgba(94, 13, 13, 0);
    pointer-events: none;

}

.show {
    padding-top:200rpx;
    position: fixed;
    z-index: 1000;
    width: 100%;
    height: 100%;
    background-color: #fff;
    font-size: 40rpx;
    
    flex-flow: column;
    justify-content: flex-start;
    align-items: center;
}

.load {
    display: none;
}

.loada {
    display: flex;
}

.btn {
    width:80%;
    display: flex;
    flex-flow: column;
    justify-content: center;
    align-items: start;
    margin-top: 40rpx;
}
.btn>view {
    font-size: 40rpx;
    
}

.btn2 {
    width:80%;
    display: flex;
    flex-flow: row;
    justify-content: space-between;
    align-items: start;
    margin-top: 50rpx;
}


.my-btn2{
    width:45%;
    display: flex;
    flex-flow: row;
    justify-content: center;
    align-items: center;
    background: linear-gradient(to top right, #3EC97A, #69EA49 );
    border-radius: 10rpx;
    box-shadow: #cecaca 1rpx 1rpx 10rpx 1rpx;
    font-size: 34rpx;
    padding:20rpx 0;
    font-weight: 600;
    margin-top: 30rpx;
    color: #EEFFEE;
    border: #EEFFEE 2rpx solid;

}

.my-btn3{
   
    width:44%;
    display: flex;
    flex-flow: row;
    justify-content: center;
    align-items: center;
    background-color: rgba(255, 255, 255, 0.973);
    border-radius: 10rpx;
    box-shadow: #cecaca 1rpx 1rpx 10rpx 1rpx;
    font-size: 34rpx;
    padding:20rpx 0;
    margin-top: 30rpx;
    font-weight: 600;
    color: #777777;
  

}


    

.btn>input {
    font-size: 30rpx;
    background-color: #fff;
    width:90%;
    margin-top:30rpx;
    height: 50rpx;
    padding:15rpx 30rpx;
    box-shadow: #cecaca 1rpx 1rpx 5rpx 1rpx;
    border-radius: 10rpx;
    
}


.btn>picker {
    font-size: 30rpx;
    background-color: #fff;
    width:90%;
    margin-top:30rpx;
    height: 50rpx;
    padding:15rpx 30rpx;
    box-shadow: #cecaca 1rpx 1rpx 5rpx 1rpx;
    border-radius: 10rpx;
    
}

.canvas-box {

    background: #999999;
    top: 0;

}

.instead {
    background-color: lightyellow;
    height: 450rpx;
    widows: 100%;
    align-items: center;
    font-size: 40rpx;
    display: flex;
    flex-flow: row;
    justify-content: center;
    border:dashed green 4rpx;
    border-radius: 10rpx;

}


.my-btn{
    width:100%;
    display: flex;
    flex-flow: row;
    justify-content: center;
    align-items: center;
    background-color: rgba(255, 255, 255, 0.973);
    border-radius: 10rpx;
    box-shadow: #cecaca 1rpx 1rpx 5rpx 1rpx;
    font-size: 30rpx;
    padding:20rpx 0;
    margin-top: 30rpx;
    color:#999797;
    font-weight: 600;

}
