/* pages/room/room.wxss */
page {
    width: 100%;
    height: 100%;
    background-color: #eee;
}

.more{
    width: 100%;
    margin-top: 30rpx;
    text-align: center;
}

.add{
    color:#008CBA;
    position: absolute;
    right: 20rpx;
}

.title{
    font-size: 42rpx;
    
}

.top{
    position:fixed;
  
    width: 100%;
    height: 100rpx;
    background-color: white;
    display: flex;
    flex-flow: row;
    box-shadow: rgba(0, 0, 0, 0.1) 0px 4px 12px;
   
    justify-content:center;
    align-items: center;

}

.tips{
    width: 30rpx;
    height: 30rpx;
    border-radius: 30rpx;
    border: 1rpx black solid;
    margin: 5rpx;
}

.name {

    font-size: 50rpx;
    margin-bottom: 20rpx
}

.state {
    display: flex;
    flex-flow: row;
    justify-content: center;
    align-items: start;
}

.button {
    display: flex;
    flex-flow: row;
    justify-content: center;
    align-items: start;
    margin-top:10rpx;

}


.list {
    display: flex;
    flex-flow: row;
    justify-content: center;
    align-items: start;
}

.icon {
    width: 40%;
    height: 100%;
    display: flex;
    flex-flow: column;
    justify-content: center;
    align-items: center;
}

.card {
    background-color: #fff;
    width: 90%;
    height: 300rpx;
    box-shadow: rgba(0, 0, 0, 0.1) 0px 4px 12px;
    border-radius: 5%;
    display: flex;
    flex-flow: row;
    margin-top: 20rpx;
    margin-bottom:20rpx;
}

image {
    width: 70%;

}

.right {
    display: flex;
    flex-flow: column;
    justify-content: center;
    align-items: start;
    padding: 30rpx
}

.bt1 {
    background-color: #4CAF50;
    /* Green */
    border: none;
    color: white;
    padding: 5px 15px;
    border-radius: 20rpx;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
    margin: 10rpx 10rpx 0 0;
    -webkit-transition-duration: 0.4s;
    /* Safari */
    transition-duration: 0.4s;
    cursor: pointer;
    background-color: white;
    color: #4CAF50;
    border: 2px solid #4CAF50;
}

.bt1:hover {
    background-color: #4CAF50;
    color: white;
}

.bt2 {
    border: none;
    color: white;
    padding: 5px 15px;
    border-radius: 20rpx;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
    margin: 10rpx 0 0 10rpx;
    -webkit-transition-duration: 0.4s;
    /* Safari */
    transition-duration: 0.4s;
    cursor: pointer;
    background-color: white;
    color: #008CBA;
    border: 2px solid #008CBA;
}

.bt2:hover {
    background-color: #008CBA;
    color: white;
}


.label{
    display: flex;
    flex-flow: row;
    justify-content: start;
    align-items: center;
    font-size:34rpx;
    color: black;
    margin: 50rpx 20rpx;
}

.label view{
   width: 40%;
   margin-right: 10rpx;
}